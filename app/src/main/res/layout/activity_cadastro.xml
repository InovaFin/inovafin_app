<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/branco_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="110dp"
    tools:context=".Cadastro">

    <!--Conteúdo Geral-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/branco_background"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="40dp">

            <!--Título-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Bem-vindo!"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="29sp"
                android:textStyle="bold" />
            <!--Título-->

            <!--Título-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/poppins"
                android:text="Por favor, insira as informações necessárias abaixo para criar sua conta."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <!--Título-->

            <!--Nome-->
            <EditText
                android:id="@+id/nomeUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ems="10"
                android:fontFamily="@font/poppins"
                android:hint="Nome"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:paddingVertical="15dp"
                android:textColor="@color/black"
                android:background="@drawable/bg_edittext"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:textColorHint="@color/verde_principal" />
            <!--Nome-->

            <!--Email-->
            <EditText
                android:id="@+id/emailUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="E-mail"
                android:paddingHorizontal="10dp"
                android:textColorHint="@color/verde_principal"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:paddingVertical="15dp"
                android:background="@drawable/bg_edittext"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:fontFamily="@font/poppins"/>
            <!--Email-->

            <!--Senha-->
            <EditText
                android:id="@+id/senhaUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Senha"
                android:paddingVertical="15dp"
                android:paddingHorizontal="10dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/verde_principal"
                android:textColor="@color/black"
                android:background="@drawable/bg_edittext"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:fontFamily="@font/poppins"/>
            <!--Senha-->

<!--            &lt;!&ndash;Confirmar Senha&ndash;&gt;-->
<!--            <EditText-->
<!--                android:id="@+id/confirmSenhaUsuario"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginBottom="40dp"-->
<!--                android:background="@drawable/bg_edittext"-->
<!--                android:textCursorDrawable="@drawable/custom_cursor"-->
<!--                android:ems="10"-->
<!--                android:fontFamily="@font/poppins"-->
<!--                android:hint="Confirmar Senha"-->
<!--                android:inputType="textPassword"-->
<!--                android:textColor="@color/black"-->
<!--                android:paddingHorizontal="10dp"-->
<!--                android:paddingVertical="15dp"-->
<!--                android:textColorHint="@color/verde_principal" />-->
<!--            &lt;!&ndash;Confirmar Senha&ndash;&gt;-->

            <!--Botão Cadastro-->
            <LinearLayout
                android:id="@+id/btCadastro"
                android:clickable="true"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_botao_ripple"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:orientation="horizontal">

                <!--Texto Botão-->
                <TextView
                    android:id="@+id/btText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Cadastrar"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"/>
                <!--Texto Botão-->

                <!--Animação do Botão-->
                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/btAnimacao"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:lottie_rawRes="@raw/load_white"
                    android:visibility="gone"
                    app:lottie_loop="true"
                    app:lottie_autoPlay="false"/>
                <!--Animação do Botão-->

            </LinearLayout>
            <!--Botão Cadastro-->

            <!--Botão Login-->
            <TextView
                android:id="@+id/btLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:clickable="true"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"/>
            <!--Botão Login-->

        </LinearLayout>

    </LinearLayout>
    <!--Conteúdo Geral-->

</ScrollView>