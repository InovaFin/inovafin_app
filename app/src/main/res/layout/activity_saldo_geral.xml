<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco_background"
    tools:context=".SaldoGeral">

    <!--Conteúdo Geral-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Header-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="30dp"
            android:layout_marginVertical="40dp">

            <!--Botão Fechar-->
            <ImageView
                android:id="@+id/icFechar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_fechar"/>
            <!--Botão Fechar-->

            <!--Título-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="Saldo Geral"
                android:textSize="26sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"/>
            <!--Título-->

            <!--Botão Calculadora-->
            <ImageView
                android:id="@+id/btCalculadora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_calculadora_black"/>
            <!--Botão Calculadora-->

        </LinearLayout>
        <!--Header-->

        <!--Saldo Geral-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="50dp"
            android:layout_marginHorizontal="30dp"
            android:paddingHorizontal="22dp"
            android:paddingVertical="20dp"
            android:background="@drawable/bg_saldo_geral"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:text="Saldo Geral"
                    android:textSize="15sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"/>

                <!--Botão Expandir-->
                <ImageView
                    android:id="@+id/btExpandir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expandir"/>
                <!--Botão Expandir-->

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="13dp"
                android:textColor="@color/verde_principal"
                android:text="R$00,00"
                android:fontFamily="@font/roboto_bold"
                android:textSize="30dp"/>

        </LinearLayout>
        <!--Saldo Geral-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Visualize melhor o seu dinheiro!"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="16sp"/>

                <!--Botão Dúvida-->
                <ImageView
                    android:id="@+id/btDuvida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="1.5dp"
                    android:background="@drawable/bg_saldo_geral"
                    android:src="@drawable/ic_duvida"/>
                <!--Botão Dúvida-->

            </LinearLayout>

        </LinearLayout>

        <!--Adicione-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Adicione"
            android:textColor="@color/verde_principal"
            android:fontFamily="@font/roboto"
            android:textSize="15sp"/>
        <!--Adicione-->

        <!--Valores à Receber-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/bg_botao_terciario_ripple"
            android:gravity="center"
            android:paddingVertical="25dp"
            android:paddingHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Valores à Receber"
                    android:textColor="@color/black_secundario"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_avancar"/>

            </LinearLayout>

        </LinearLayout>
        <!--Valores à Receber-->

        <!--Linha cinza-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_linha"/>
        <!--Linha cinza-->

        <!--Dinheiro Guardado/Investido-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/bg_botao_terciario_ripple"
            android:gravity="center"
            android:paddingVertical="25dp"
            android:paddingHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dinheiro Guardado/Investido"
                    android:textColor="@color/black_secundario"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_avancar"/>

            </LinearLayout>

        </LinearLayout>
        <!--Dinheiro Guardado/Investido-->

        <!--Linha cinza-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_linha"/>
        <!--Linha cinza-->

        <!--Subtraia-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Subtraia"
            android:textColor="@color/vermelho"
            android:fontFamily="@font/roboto"
            android:textSize="15sp"/>
        <!--Subtraia-->

        <!--Valores à Pagar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:background="@drawable/bg_botao_terciario_ripple"
            android:gravity="center"
            android:paddingVertical="25dp"
            android:paddingHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Valores à Pagar"
                    android:textColor="@color/black_secundario"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_avancar"/>

            </LinearLayout>

        </LinearLayout>
        <!--Valores à Receber-->

        <!--Linha cinza-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_linha"/>
        <!--Linha cinza-->

    </LinearLayout>
    <!--Conteúdo Geral-->

</ScrollView>