<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/branco_background"
    tools:context=".MinhasContas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Header-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="60dp"
                android:paddingHorizontal="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <!--Bot達o Voltar-->
                    <ImageView
                        android:id="@+id/icFechar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_fechar"/>
                    <!--Bot達o Voltar-->

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:text="Minhas Contas"
                    android:textSize="26sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"/>

            </RelativeLayout>
            <!--Header-->

            <!--Minha Conta-->
            <LinearLayout
                android:id="@+id/btnConta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_botao_terciario_ripple"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="30dp"
                android:paddingVertical="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Conta Nubank"
                        android:textColor="@color/black_secundario"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_avancar" />

                </LinearLayout>

            </LinearLayout>
            <!--Minha Conta-->

            <!--Linha cinza-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_linha"/>
            <!--Linha cinza-->

        </LinearLayout>
        
    </ScrollView>

    <!--Bot達o Editar e Adicionar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="40dp"
        android:background="@color/branco_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="17dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/bg_botao_secundario_ripple">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_editar"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Editar Contas"
                    android:textColor="@color/black_secundario"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_bold"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnAddContas"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_botao_ripple"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="17dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_add" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Adicionar Contas"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <!--Bot達o Editar e Adicionar-->

</RelativeLayout>