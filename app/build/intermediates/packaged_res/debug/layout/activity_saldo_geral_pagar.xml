<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco_background"
    tools:context=".SaldoGeralPagar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Header-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="60dp"
            android:paddingHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <!--Botão Voltar-->
                <ImageView
                    android:id="@+id/icFechar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fechar"/>
                <!--Botão Voltar-->

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="Valores a Pagar"
                android:textSize="24sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"/>

        </RelativeLayout>
        <!--Header-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Valor a Pagar-->
                <LinearLayout
                    android:id="@+id/btRegistro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:background="@drawable/bg_botao_terciario_ripple"
                    android:gravity="center"
                    android:paddingVertical="25dp"
                    android:paddingHorizontal="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estaff"
                            android:textColor="@color/black_secundario"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_weight="1"
                            android:text="14/08/23"
                            android:textColor="@color/vermelho"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:text="R$150,00"
                            android:textColor="@color/black_secundario"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_checkbox_pagar"/>

                    </LinearLayout>

                </LinearLayout>
                <!--Valor a Pagar-->

                <!--Linha cinza-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_linha"/>
                <!--Linha cinza-->

                <!--Valor a Pagar-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:background="@drawable/bg_botao_terciario_ripple"
                    android:gravity="center"
                    android:paddingVertical="25dp"
                    android:paddingHorizontal="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estaff"
                            android:textColor="@color/black_secundario"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_weight="1"
                            android:text="14/08/23"
                            android:textColor="@color/vermelho"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="12sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:text="R$150,00"
                            android:textColor="@color/black_secundario"
                            android:fontFamily="@font/roboto_light"
                            android:textSize="14sp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_checkbox"/>

                    </LinearLayout>

                </LinearLayout>
                <!--Valor a Pagar-->

                <!--Linha cinza-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_linha"/>
                <!--Linha cinza-->

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="17dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/bg_botao_ripple">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adicionar"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:fontFamily="@font/roboto_bold"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>