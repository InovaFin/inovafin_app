<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/branco_background"
    tools:context=".EditarPerfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Header-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:paddingHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <!--Botão Voltar-->
                <ImageView
                    android:id="@+id/icFechar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fechar"/>
                <!--Botão Voltar-->

            </LinearLayout>

            <!--Título-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:text="Editar Perfil"
                android:textSize="24sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/black"/>
            <!--Título-->

        </RelativeLayout>
        <!--Header-->

        <!--Nome-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"/>

            <!--Nome-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Seu nome aqui"
                android:paddingVertical="15dp"
                android:paddingHorizontal="10dp"
                android:textColorHint="@color/black_terciario"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:background="@drawable/bg_edittext_secundario"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:fontFamily="@font/roboto"/>
            <!--Nome-->

        </LinearLayout>
        <!--Nome-->

        <!--Email-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"/>

            <!--Email-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="contaexemplo@gmail.com"
                android:paddingVertical="15dp"
                android:paddingHorizontal="10dp"
                android:textColorHint="@color/black_terciario"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:background="@drawable/bg_edittext_secundario"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:fontFamily="@font/roboto"/>
            <!--Email-->

        </LinearLayout>
        <!--Email-->

        <!--Senha-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nova Senha"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"/>

            <!--Nova Senha-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingVertical="15dp"
                android:paddingHorizontal="10dp"
                android:textColorHint="@color/black_terciario"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:background="@drawable/bg_edittext_secundario"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:fontFamily="@font/roboto"/>
            <!--Nova Senha-->

        </LinearLayout>
        <!--Senha-->

        <!--ConfirmSenha-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmar Senha"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"/>

            <!--Email-->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingVertical="15dp"
                android:paddingHorizontal="10dp"
                android:textColorHint="@color/black_terciario"
                android:layout_marginBottom="15dp"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:background="@drawable/bg_edittext_secundario"
                android:textCursorDrawable="@drawable/custom_cursor"
                android:fontFamily="@font/roboto"/>
            <!--Email-->

        </LinearLayout>
        <!--ConfirmSenha-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foto"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/roboto_medium"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/img_perfil"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!--Botão Excluir-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="14dp"
                        android:elevation="2dp"
                        android:clickable="true"
                        android:background="@drawable/bg_botao_secundario_ripple">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_foto"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alterar Foto"
                            android:textColor="@color/black_secundario"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_medium"/>

                    </LinearLayout>
                    <!--Botão Excluir-->

                    <!--Botão Adicionar-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="14dp"
                        android:elevation="2dp"
                        android:clickable="true"
                        android:background="@drawable/bg_botao_secundario_ripple">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_excluir"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Excluir Foto"
                            android:textColor="@color/black_secundario"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_medium"/>

                    </LinearLayout>
                    <!--Botão Adicionar-->

                </LinearLayout>

            </LinearLayout>

            <!--Botão Salvar-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingHorizontal="17dp"
                android:layout_marginVertical="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:clickable="true"
                android:background="@drawable/bg_botao_ripple">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salvar"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto_bold"/>

                </LinearLayout>

            </LinearLayout>
            <!--Botão Salvar-->

        </LinearLayout>

    </LinearLayout>

</ScrollView>