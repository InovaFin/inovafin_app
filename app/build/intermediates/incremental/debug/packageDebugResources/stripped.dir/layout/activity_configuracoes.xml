<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/branco_background"
    tools:context=".Configuracoes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cinza"
            android:paddingBottom="30dp"
            android:orientation="vertical">

            <!--Botão Voltar-->
            <ImageView
                android:id="@+id/icFechar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fechar"
                android:layout_marginTop="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="30dp"/>
            <!--Botão Voltar-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="25dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--Foto Usuário-->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imagemUsuario"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:shapeAppearance="@style/circular"
                    android:elevation="5dp"
                    android:scaleType="centerCrop"
                    android:padding="5dp"
                    android:background="@color/verde_secundario"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_perfil"/>
                <!--Foto Usuário-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Nome Usuário-->
                    <TextView
                        android:id="@+id/nomeUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usuário"
                        android:fontFamily="@font/roboto_medium"
                        android:textColor="@color/black"
                        android:textSize="18sp"/>
                    <!--Nome Usuário-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--Email Usuário-->
                        <TextView
                            android:id="@+id/emailUsuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="emailUsuario@gmail.com"
                            android:fontFamily="@font/roboto_light"
                            android:textColor="@color/verde_principal"
                            android:textSize="13sp" />
                        <!--Email Usuário-->

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/branco_background"
            android:orientation="vertical">

            <!--Editar Perfil-->
            <LinearLayout
                android:id="@+id/btEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_botao_terciario_ripple"
                android:clickable="true"
                android:orientation="vertical"
                android:paddingHorizontal="30dp"
                android:paddingVertical="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="23dp"
                        android:layout_marginEnd="30dp"
                        android:src="@drawable/ic_perfil_config" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Editar Perfil"
                        android:textColor="@color/black_secundario"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_avancar" />

                </LinearLayout>

            </LinearLayout>
            <!--Editar Perfil-->

            <!--Linha cinza-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_linha"/>
            <!--Linha cinza-->

        </LinearLayout>

    </LinearLayout>


    <!--Botão Sair-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="40dp"
        android:background="@color/branco_background"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btSair"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingHorizontal="17dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:background="@drawable/bg_botao_secundario_ripple">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/ic_sair"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sair do aplicativo"
                    android:textColor="@color/black_secundario"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_bold"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <!--Botão Sair-->


</RelativeLayout>