<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/branco_background"
    tools:context=".EmailEnviado"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Conteúdo Geral-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/branco_background"
        android:paddingTop="150dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginHorizontal="40dp">

            <!--Título-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E-mail enviado!"
                android:fontFamily="@font/poppins_bold"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="15dp"/>
            <!--Título-->

            <!--Subtitulo-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/poppins"
                android:text="Um E-mail de verificação foi enviado."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16sp" />
            <!--Subtitulo-->

            <!--Subtitulo-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Verifique sua caixa de entrada!"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textColor="@color/verde_principal"/>
            <!--Subtitulo-->

            <!--Imagem Senha Enviada-->
            <ImageView
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_email_enviado"/>
            <!--Imagem Senha Enviada-->

            <!--Botão Login-->
            <Button
                android:id="@+id/btLogin"
                android:clickable="true"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_botao_ripple"
                android:text="Login"
                android:textStyle="bold"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_medium"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"/>
            <!--Botão Login-->

        </LinearLayout>

    </LinearLayout>
    <!--Conteúdo Geral-->

</ScrollView>