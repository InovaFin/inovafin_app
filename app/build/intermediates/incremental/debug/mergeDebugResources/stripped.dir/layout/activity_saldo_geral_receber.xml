<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/branco_background"
    tools:context=".SaldoGeralReceber">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--Header-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:paddingHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <!--Botão Voltar-->
                <ImageView
                    android:id="@+id/icFechar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_fechar"/>
                <!--Botão Voltar-->

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="Valores a Receber"
                android:textColor="@color/black"
                android:textSize="24sp" />

        </RelativeLayout>
        <!--Header-->

        <!--Valor Total-->
        <!--Valor Total-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/listaReceber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="85dp"
                tools:listitem="@layout/valor_receber_item"/>

        </LinearLayout>

    </LinearLayout>

    <!--Botão Add-->
    <LinearLayout
        android:id="@+id/btAdicionar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="visible"
        android:paddingHorizontal="17dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@drawable/bg_botao_ripple">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/btText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:src="@drawable/ic_add"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adicionar"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:fontFamily="@font/roboto_bold"/>

            </LinearLayout>

            <!--Animação do Botão-->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/btAnimacao"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:lottie_rawRes="@raw/load_white"
                android:visibility="gone"
                app:lottie_loop="true"
                app:lottie_autoPlay="false"/>
            <!--Animação do Botão-->

        </LinearLayout>

    </LinearLayout>
    <!--Botão Add-->

</RelativeLayout>